<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Kirjautuminen</servlet-name>
        <servlet-class>fi.cs.helsinki.saada.ostoslista.servletit.Kirjautuminen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Lista</servlet-name>
        <servlet-class>fi.cs.helsinki.saada.ostoslista.servletit.Lista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Listat</servlet-name>
        <servlet-class>fi.cs.helsinki.saada.ostoslista.servletit.Listat</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Kirjautuminen</servlet-name>
        <url-pattern>/kirjautuminen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Lista</servlet-name>
        <url-pattern>/lista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Listat</servlet-name>
        <url-pattern>/listat</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
